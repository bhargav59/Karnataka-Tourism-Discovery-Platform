# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/karnataka_tourism
# Or use Supabase/Neon connection string:
# DATABASE_URL=postgresql://user:password@db.xxxxx.supabase.co:5432/postgres

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRY=7d

# Google APIs
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Image Storage (Choose one)
# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OR AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-south-1
# AWS_S3_BUCKET=karnataka-tourism-images

# Email Service (Choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@karnatakatourism.com

# OR Resend
# RESEND_API_KEY=your-resend-api-key

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Payment Gateway (Optional - for Phase 3)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_ITINERARIES=true
NEXT_PUBLIC_ENABLE_USER_SUBMISSIONS=true
